<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">
	<activeProfiles>
		<activeProfile>cardano-common</activeProfile>
		<activeProfile>cardano-common-api</activeProfile>
		<activeProfile>cardano-common-explorer</activeProfile>

	</activeProfiles>

	<profiles>
		<profile>
			<id>cardano-common</id>
			<repositories>
				<repository>
					<id>central</id>
					<url>https://repo1.maven.org/maven2</url>
				</repository>
				<repository>
					<id>cardano-common</id>
					<url>https://maven.pkg.github.com/sotatek-dev/cardano-common</url>
					<snapshots>
						<enabled>
							true</enabled>
					</snapshots>
				</repository>
			</repositories>
		</profile>
		<profile>
			<id>cardano-common-api</id>
			<repositories>
				<repository>
					<id>central</id>
					<url>https://repo1.maven.org/maven2</url>
				</repository>
				<repository>
					<id>cardano-common-api</id>
					<url>https://maven.pkg.github.com/sotatek-dev/cardano-common-api</url>
					<snapshots>
						<enabled>
							true</enabled>
					</snapshots>
				</repository>
			</repositories>
		</profile>
		<profile>
			<id>cardano-common-explorer</id>
			<repositories>
				<repository>
					<id>central</id>
					<url>https://repo1.maven.org/maven2</url>
				</repository>
				<repository>
					<id>cardano-common-explorer</id>
					<url>https://maven.pkg.github.com/sotatek-dev/cardano-common-explorer</url>
					<snapshots>
						<enabled>
							true</enabled>
					</snapshots>
				</repository>
			</repositories>
		</profile>
	</profiles>
	<servers>
		<server>
			<id>cardano-common</id>
			<username>{username_github}</username>
			<password>{token_github}</password>
		</server>
		<server>
			<id>cardano-common-api</id>
			<username>{username_github}</username>
			<password>{token_github}</password>
		</server>
		<server>
			<id>cardano-common-explorer</id>
			<username>{username_github}</username>
			<password>{token_github}</password>
		</server>
	</servers>
</settings>
